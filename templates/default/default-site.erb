server {
  listen   80;
  server_name  <%= node['hostname'] %>;

  location / {
    <% if node['nginx']['install_method'] == 'source' %>
    root   <%= node['nginx']['source']['prefix'] %>/html;
    <% else %>
    root   <%= node['nginx']['default_root'] %>;
    <% end %>
    index  index.html index.htm;
  }
}
